@model ProjectTesting.ViewModel.ShoppingCart

<form method="post" asp-controller="Prodcuts" asp-action="DetailsV2">
    <div class="card container">
        <div class="card-header bg-primary text-light ml-0 row ">
            <div class="col-12 col-md-6">
                <h1 class="text-white-50">Name: @Model.Product.productName</h1>
            </div>
            <div class="col-12 col-md-6 text-end pt-4">
                <span class="badge bg-warning pt-2" style="height:30px;">Category</span>
            </div>
        </div>
        <div class="card-body row container">
            <div class="container rounded p-2 col-8">
                <div class="row">
                    <div class="col-8 col-lg-8">
                        <div class="row pl-2">
                            <h5 class="text-muted">Category: @Model.Product.category.categoryName</h5>
                        </div>
                        <div class="row pl-2">
                            <h5 class="text-muted">Price: ₹@Model.Product.productPrice.ToString()</h5>
                        </div>
                    </div>
                    <div class="row pl-2">
                        <p class="text-secondary">@Model.Product.productDesc</p>
                    </div>
                    <div class="row pl-2">
                        <div class="col-2 text-primary"><h4>Count</h4></div>
                        <div class="col-10"><input asp-for="Count" class="form-control" /></div>
                    </div>
                </div>

            </div>
            <div class="col-12 col-lg-3 offset-lg-1 text-center col-4">
                <img src="~/Images/@Model.Product.imageURL" width="100%" class="rounded" />
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col-12 col-md-6 pd-1">
                    <a class="btn btn-success form-control" style="height:50px;" asp-controller="Products" asp-action="Index">Back to list</a>
                </div>
                <div class="col-12 col-md-6 pd-1">
                    <a class="btn btn-primary form-control" style="height:50px;" asp-controller="Products" asp-action="GetCategories" asp-route-id="@Model.Product.id">Add to Cart</a>
                </div>
            </div>
        </div> 
    </div>
    
</form>