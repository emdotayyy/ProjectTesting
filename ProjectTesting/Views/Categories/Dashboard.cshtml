@model dynamic
@using ProjectTesting.Models;
@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>
<hr />

<div class="container">
    <div class="row">
        <div class="col-sm">
            <table class="table table-bordered">
            <tr>
                <th>
                    Category Name
                </th>
            </tr>
            @foreach (Category c in Model.categories)
            {
                <tr>
                    <td>@Html.DisplayFor(e=>c.categoryName)</td>
                </tr>
            }
        </table>
        </div>
        <div class="col-5">
             <table class="table table-bordered">
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
            </tr>
            @foreach (Product p in Model.products)
            {
                <tr>
                    <td>@Html.DisplayFor(e=>p.productName)</td>
                    <td>@Html.DisplayFor(e=>p.productPrice)</td>
                </tr>
            }
        </table>
        </div>
        <div class="col-5">
            <table class="table table-bordered">
            <tr>
                <th>
                    Quantity
                </th>
                <th>
                    ROL
                </th>
                <th>
                    Category
                </th>
                <th>
                    Product
                </th>
            </tr>
            @foreach (Inventory i in Model.inventories)
            {
                <tr>
                    <td>@Html.DisplayFor(e=>i.quantity)</td>
                    <td>@Html.DisplayFor(e=>i.reOrderLevel)</td>
                    <td>@Html.DisplayFor(e=>i.category.categoryName)</td>
                    <td>@Html.DisplayFor(e=>i.product.productName)</td>
                </tr>
            }
        </table>
        </div>
    </div>
</div>