@model IEnumerable<ProjectTesting.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}
<style>
    .btn-text-left{
        text-align:left
    }
    .btn-text-right{
        text-align:right
    }
    .zoom{
        padding:34px;
        transition:transform .2s;
        margin:auto
    }
    .zoom:hover{
        transform:scale(1.3);
    }
</style>
<br />
<br />
<main class="my-5">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <img src="~/Images/Cropped.png" alt="" class="img-fluid" />
            </div>
            <div class="col-md-5">
                @*<h1>Welcome <br /> To <br /> A BuyN'Sell Shop'</h1>*@
                <p class="mt-4"> <b>Welcome to JoeLX, a buyN'sell shop!</b><br /><br />Here Customers can either be a buyer, a seller as well as a buyer and a seller. The Customers will be allowed to create their own products which will be updated on the Dashborad which the vendors and the admins will be able to see. The products by the Vendors and the Customers(Sellers) will be displayed on the homepage. The Products created by the Customers will be checked real-time with the help of AI so not to break any rules or regulations. <br /><br /><i>The Products to be sold here should be of utmost quality. Penalties may apply if the rule's not followed.</i></p>
                <div style="">
                    <p style="text-align:center">
                        <a class="btn btn-dark" data-bs-toggle="collapse" href="#multiCollapseExample1" role="button" aria-expanded="false" aria-controls="multiCollapseExample1">Buyer</a>
                        <button class="btn btn-dark" type="button" data-bs-toggle="collapse" data-bs-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">Seller</button>
                        @*<button class="btn btn-dark" type="button" data-bs-toggle="collapse" data-bs-target=".multi-collapse" aria-expanded="false" aria-controls="multiCollapseExample1 multiCollapseExample2">/\</button>*@
                    </p>
                    <div class="collapse multi-collapse" id="multiCollapseExample1">
                        <div class="card card-body">
                            We build leading destinations for buying, selling, and exchanging products and services.
                        </div>
                    </div>
                    <div class="collapse multi-collapse" id="multiCollapseExample2">
                        <div class="card card-body">
                            We help people buy and sell cars, find housing, get jobs, buy and sell household goods, and much more.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
@*Carousel*@

<div id="carouselExampleCaptions" class="carousel slide shadow-lg p-3 mb-5 bg-dark rounded" data-bs-ride="false">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="2" aria-label="Slide 3"></button>
    </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://cellbuddy.in/wp-content/uploads/2022/05/1681iphone12-buy-now-banner-mobile.jpeg" style="height:500px" class="d-block w-100" alt="..."/>
                <div class="carousel-caption d-none d-md-block">
                    <h5></h5>
                    <p></p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://www.jd.id/news/wp-content/uploads/2022/01/iphone-13.jpg" style="height:500px" class="d-block w-100" alt="..."/>
                <div class="carousel-caption d-none d-md-block">
                    <h5></h5>
                    <p></p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="https://cellbuddy.in/wp-content/uploads/2022/05/1681iphone12-buy-now-banner-mobile.jpeg" style="height:500px" class="d-block w-100" alt="..."/>
                <div class="carousel-caption d-none d-md-block">
                    <h5></h5>
                    <p></p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
</div>
<div class="row product-container">
    @foreach (var item in Model)
    {
        <div class="card col-md-4 col-sm-3 col-xs-6 shadow-lg p-3 mb-3 bg-light rounded-3" style="width:16rem; margin-right:8px">
            <div class="thumbnail product-item zoom" style="max-width:540px">
                <img src="~/Images/@item.imageURL" class="card-img-top" style="width:125px; height:139px;" alt="">
                <div class="content">
                    <hr/>
                    <h6>@item.productName</h6>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <div class="card-text">
                                 <a class="btn btn-outline-dark btn-sm" asp-controller="Products" asp-action="Details" asp-route-id="@item.id">
                                   <i class="fa-solid fa-file-circle-info"></i>
                                 </a>
                                 <a class="btn btn-secondary btn-sm text-white" asp-controller="Products" asp-action="GetCategories" asp-route-id="@item.id">
                                     <i class="fa-solid fa-cart-arrow-down"></i>
                                 </a>
                                 <a class="btn btn-outline-dark btn-sm text-white" asp-controller="Products" asp-action="GetCategories" asp-route-id="@item.id">
                                     <i class="fa-solid fa-bag-shopping"></i>
                                 </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
    <img src="" style="display:block; margin-left:auto; margin-right:auto" />
</div>

